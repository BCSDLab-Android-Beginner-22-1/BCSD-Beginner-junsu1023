<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="post"
            type="com.example.myapplication.PostData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_info_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:viewBindingIgnore="true">

        <TextView
            android:id="@+id/item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="@{post.title}"
            android:hint="@string/post_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_content_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@{post.content}"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:hint="@string/post_contents"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/item_title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/item_writer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:hint="@string/writer"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@{post.writer}"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/photo_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_content_text_view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/item_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:hint="@string/time"
            android:text="@{post.time}"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/photo_recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_writer_text_view"
            app:layout_constraintTop_toBottomOf="@+id/item_content_text_view"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>